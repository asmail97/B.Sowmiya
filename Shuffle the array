public class ShuffleArr {
    public static void main(String[] args)
    {
        //leetcode 1470
        int arr[] = {1,2,3,4,5,6};
        int new_arr[] = new int[arr.length];
        int n = arr.length / 2;
        int j = 0;
        for(int i = 0; i < n; i++)
        {
          new_arr[j++] = arr[i];
          new_arr[j++] = arr[i + n];
        }
        System.out.print(Arrays.toString(new_arr));
    }
}
